<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/StuDevs_DB</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">studevsdb</property>
        <property name="hibernate.connection.pool_size">1</property>
 
     
        <mapping class="com.studevs.mvc.models.Admin"/>
        <mapping class="com.studevs.mvc.models.FeaturePage"/>
        <mapping class="com.studevs.mvc.models.GalleryImages"/>
        <mapping class="com.studevs.mvc.models.OurPackages"/>
        <mapping class="com.studevs.mvc.models.OurTeam"/>
    </session-factory>
</hibernate-configuration>
